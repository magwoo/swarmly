FROM rust:1.86-alpine3.20 AS builder
WORKDIR /build

RUN apk add --no-cache build-base cmake
COPY Cargo.* ./
RUN mkdir src && echo "fn main() {}" >> src/main.rs
RUN cargo build -r
COPY . .
RUN cargo build -r

FROM alpine:3.20 AS runner
WORKDIR /app

COPY --from=builder /build/target/release/swarmly ./bin
ENTRYPOINT ["./bin"]
